<div class="col-12 mb-4">
  <a href="{% if talk.external_url %}{{ talk.external_url }}{% else %}{{ talk.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if talk.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=talk.img sizes="(min-width: 768px) 156px, 50vw" alt="talk thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if talk.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h4 class="card-title" style="font-size: 1.2rem;">{{ talk.title }}</h4>
            <p class="card-text">{{ talk.description }}</p>
            {% if talk.venue or talk.location or talk.date %}
              <div class="talk-details text-muted small">
                {% if talk.date %}
                  <div><i class="fa-solid fa-calendar"></i> {{ talk.date | date: "%B %Y" }}</div>
                {% endif %}
                {% if talk.venue %}
                  <div><i class="fa-solid fa-building"></i> {{ talk.venue }}</div>
                {% endif %}
                {% if talk.location %}
                  <div><i class="fa-solid fa-location-dot"></i> {{ talk.location }}</div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </a>
</div>